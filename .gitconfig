[user]
	name = "Tanguy â§“ Herrmann"
	email = "dolanorgit@evereska.org"
[alias]
	l = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s%Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	la = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ci = commit -m
	s = status -s --untracked=no
	sn = status -s --untracked=normal
	sa = status -s --untracked=all
	dc = diff --color=auto
    dw = diff --color-words
    dwe = diff --color-words="[^[:space:]./]"
	co = checkout
	b = branch
	appraise = !/home/dolanor/.local/gopath/bin/git-appraise
[core]
	editor = vim
[color]
	ui = true
[color "diff"]
	whitespace = red reverse
[push]
	default = simple
