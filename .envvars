# CDPATH
CDPATH=$GOPATH/src/code.tuxago.com:$CDPATH
CDPATH=$GOPATH/src:$CDPATH
CDPATH=$GOPATH/src/github.com:$CDPATH
CDPATH=~/src:$CDPATH
CDPATH=~/src/dagger/pkg/universe.dagger.io/:$CDPATH
CDPATH=/media/dolanor/ingolemo/sync/cloudtop-gopath/src/github.com:$CDPATH
CDPATH=.:$CDPATH

export CDPATH

# Used by my vim bindings for code review
REVIEW_BASE=origin/master

export GOPHERJS_GOROOT=~/sdk/go1.19.3

# dagger don't export our own usage (employee)
export DO_NOT_TRACK=1
export DAGGER_LOG_FORMAT=plain
