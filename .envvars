# To source from the ~/.bashrc

export EDITOR=vi

PATH=~/.local/flutter/bin:$PATH
PATH=~/.dotfiles/bin:$PATH
PATH=~/.local/google-cloud-sdk/bin/:$PATH
PATH=/usr/local/go/bin:$PATH
PATH=~/.local/bin:$PATH

# Go
